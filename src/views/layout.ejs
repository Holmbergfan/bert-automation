<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %> - Bert Automation Tool</title>
  <!-- Include Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="d-flex" id="wrapper" style="width: 100vw; height: 100vh;">
    <!-- Sidebar -->
    <div class="bg-dark border-end" id="sidebar-wrapper">
      <div class="sidebar-heading text-center py-4 fs-4"><strong>Bert Automation</strong></div>
      <div class="list-group list-group-flush">
        <a href="/" class="list-group-item list-group-item-action bg-dark text-white">Home</a>
        <a href="/dashboard" class="list-group-item list-group-item-action bg-dark text-white">Dashboard</a>
        <a href="/players" class="list-group-item list-group-item-action bg-dark text-white">Players</a>
        <a href="/config" class="list-group-item list-group-item-action bg-dark text-white">Configuration</a>
        <!-- Add more menu items as needed -->
      </div>
    </div>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper" class="flex-grow-1">
      <!-- Top Navigation Bar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <div class="container-fluid">
          <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>
        </div>
      </nav>

      <div class="container-fluid mt-4">
        <% if (message && message.length > 0) { %>
          <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            <%= message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>
        <% if (error && error.length > 0) { %>
          <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>

        <!-- Main Content -->
        <%- body %>
      </div>
    </div>
    <!-- /#page-content-wrapper -->
  </div>
  <!-- /#wrapper -->

  <!-- Include Bootstrap 5 JS and dependencies -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Custom JS for Toggle Menu -->
  <script>
    document.getElementById("menu-toggle").addEventListener("click", function(e) {
      e.preventDefault();
      document.getElementById("wrapper").classList.toggle("toggled");
    });
  </script>
</body>
</html>
